<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".SellerLoginActivity">
    <TextView
        android:layout_margin="10dp"
        android:layout_gravity="center"
        android:textSize="18dp"
        android:text="Seller Log In Form"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <EditText
        android:hint="Email..."
        android:layout_margin="10dp"
        android:id="@+id/seller_log_email_editID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:hint="Password..."
        android:layout_margin="10dp"
        android:id="@+id/seller_log_password_editID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:layout_margin="10dp"
        android:text="Log In"
        android:id="@+id/seller_log_btnID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/seller_log_having_no_acc"
        android:layout_margin="10dp"
        android:layout_gravity="center"
        android:text="Having no account ? Create account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>