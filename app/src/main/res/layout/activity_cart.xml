<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CartActivity">



    <TextView
        android:layout_centerHorizontal="true"
        android:textColor="#4c8fdd"
        android:textSize="20dp"
        android:id="@+id/total_price_txtID"
        android:layout_margin="20dp"
        android:text="Total Price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_below="@+id/total_price_txtID"
        android:id="@+id/cart_recyclerID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:visibility="gone"
        android:padding="7dp"
        android:layout_centerInParent="true"
        android:textColor="#FF0000"
        android:text="Congratulations, Your order has been placed successfully.
Soon it will be verified by admin."
        android:id="@+id/msg_txtID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:layout_margin="20dp"
        android:elevation="12dp"
        android:textColor="#FFFFFF"
        android:background="@drawable/login_btn_back"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:id="@+id/cart_next_btnID"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:text="NEXT"
        android:textSize="30dp" />

</RelativeLayout>