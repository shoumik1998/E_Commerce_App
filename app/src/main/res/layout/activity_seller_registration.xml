<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SellerRegistrationActivity">

    <TextView
        android:layout_margin="8dp"
        android:textSize="18dp"
        android:text="Seller Registration Form"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <EditText
        android:hint="Name..."
        android:layout_margin="10dp"
        android:id="@+id/seller_name_editID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:hint="Phone number..."
        android:layout_margin="10dp"
        android:id="@+id/seller_phone_editID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:hint="Email..."
        android:layout_margin="10dp"
        android:id="@+id/seller_email_editID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:hint="Password..."
        android:layout_margin="10dp"
        android:id="@+id/seller_password_editID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:hint="Shop/Business Address..."
        android:layout_margin="10dp"
        android:id="@+id/seller_shop_address_editID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:layout_margin="10dp"
        android:text="Register"
        android:id="@+id/seller_reg_btnID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/seller_having_acc_txtID"
        android:layout_margin="10dp"
        android:layout_gravity="center"
        android:text="Already having an account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>