<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <RelativeLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="#f6546a"
            android:textSize="25dp"
            android:layout_alignParentStart="true"
            android:text="Close"
            android:id="@+id/settings_closeID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true" />

        <TextView
            android:textColor="#0000ff"
            android:textSize="25dp"
            android:layout_alignParentEnd="true"
            android:text="Update"
            android:id="@+id/settings_updateID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true" />
    </RelativeLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        app:civ_border_width="1dp"
        app:civ_border_color="#4ca3dd"
        android:src="@drawable/profile"
        android:id="@+id/settings_profile_picID"
        android:layout_margin="20dp"
        android:layout_gravity="center"
        android:layout_width="150dp"
        android:layout_height="150dp"/>

    <EditText
        android:padding="7dp"
        android:background="@drawable/join_btn_back"
        android:textColorHint="#4ca3dd"
        android:hint="Phone number "
        android:layout_margin="8dp"
        android:layout_gravity="center"
        android:id="@+id/settings_phone_numberID"
        android:layout_width="350dp"
        android:layout_height="60dp"/>
    <EditText
        android:inputType="phone"
        android:padding="7dp"
        android:background="@drawable/join_btn_back"
        android:textColorHint="#4ca3dd"
        android:hint="Name "
        android:layout_margin="10dp"
        android:layout_gravity="center"
        android:id="@+id/settings_full_nameID"
        android:layout_width="350dp"
        android:layout_height="60dp"/>
    <EditText
        android:padding="7dp"
        android:background="@drawable/join_btn_back"
        android:textColorHint="#4ca3dd"
        android:hint="Address"
        android:layout_margin="10dp"
        android:layout_gravity="center"
        android:id="@+id/settings_addressID"
        android:layout_width="350dp"
        android:layout_height="60dp"/>




</LinearLayout>