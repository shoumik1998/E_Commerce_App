<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    app:cardElevation="16dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="7dp"
    android:layout_margin="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:background="#c9e3f4"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_centerHorizontal="true"
            android:textSize="18dp"
            android:textColor="#660066"
            android:layout_margin="10dp"
            android:id="@+id/cart_item_pro_name_txtID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_centerInParent="true"
            android:textSize="18dp"
            android:layout_below="@+id/cart_item_pro_name_txtID"
            android:textColor="#2E63D3"
            android:layout_margin="10dp"
            android:id="@+id/cart_item_pro_quantity_txtID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:layout_below="@+id/cart_item_pro_quantity_txtID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textSize="18dp"
                android:textColor="#f6546a"
                android:layout_centerInParent="true"
                android:layout_margin="10dp"
                android:id="@+id/cart_item_pro_price_txtID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </RelativeLayout>

    </RelativeLayout>




</androidx.cardview.widget.CardView>